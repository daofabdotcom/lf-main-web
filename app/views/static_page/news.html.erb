
<!-- page title -->
<section class="section section--first blog-header-bg p-t-30 p-b-30 text-center">
  <div class="container">
    <div class="row">
      <!-- section title -->
      <% unless @featured_article.nil?%>
      <div class="col-12 col-sm-10 offset-sm-1 col-lg-8 offset-lg-2 col-xl-6 offset-xl-3">
        <a href="/post/<%= @featured_article.data.slug %>">
          <h4 class="text-white">FEATURED ARTICLE</h4>
          <h2 class="section__text--head grey-text"><%= @featured_article.data.title %></h2>
          <img src="<%= @featured_article.data.featured_image %>" width="50%">
        </a>
      </div>
        <% end %>
      <!-- end section title -->
    </div>
  </div>
</section>
<!-- end page title -->

<!-- blog -->
<div class="section section--border-bottom">
  <div class="container">
    <div class="row">
      <div class="col-12 offset-lg-0 col-xl-10 offset-xl-1">
        <div class="row">
          <!-- content -->


            <% if @posts.to_a.length > 0
              @posts.each_with_index do |post, index|
            %>
              <div class="col-12 col-md-4  col-xl-4 col-sm-4 col-lg-4">
                <!-- post -->
                <a href="/post/<%= post.data.slug %>">
                  <article class="post blog-min-height" id="post1">
                    <figure class="post__img">
                      <img src="<%= post.data.featured_image  %>">
                    </figure>
                    <header class="post__header">
                      <span class="post__date"><%= Date.parse(post.data.published).strftime('%v') %></span>
                      <h2 class="post__title"><%= post.data.title %></h2>
                    </header>
                  </article>
                </a>
              </div>
                <!-- end post -->
              <% end
                 else
                    %>
                  <h3>No post yet.</h3>
                 <% end %>



            <!-- paginator -->
<!--            <ul class="paginator">
              <li class="paginator__item paginator__item--prev"><a href="#"><i class="ti-arrow-left"></i></a></li>
              <li class="paginator__item paginator__item--active"><a href="#">1</a></li>
              <li class="paginator__item"><a href="#">2</a></li>
              <li class="paginator__item"><a href="#">3</a></li>
              <li class="paginator__item paginator__item--next"><a href="#"><i class="ti-arrow-right"></i></a></li>
            </ul>-->
            <!-- end paginator -->

          <!-- end content -->
        </div>
      </div>
    </div>
  </div>
</div>
