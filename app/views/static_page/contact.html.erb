<!-- faq -->
<section class="section section--border-bottom p-t-1">
  <div class="container">
    <div class="row">
      <div class="col-12 col-lg-12 col-md-12 col-xl-10 text-center m-t-50">
        <!-- form -->
        <h2 class="section__title text-uppercase offset-xl-2">Contact Us</h2>
        <table width="90%" align="center" class="m-t-60">
          <form action="/contact" class="sign__form" method="post">
          <tr>
            <td class="vertical-baseline text-right"><label class="dis-inline required">First Name</label></td>
            <td><input name="first_name" type="text" class="form__input form__input_full col-10 offset-1" placeholder="John"></td>
          </tr>
          <tr>
            <td class="vertical-baseline text-right"><label class="required">Surname / Last Name</label></td>
            <td><input name="last_name" type="text" class="form__input form__input_full col-10 offset-1" placeholder="Tan"></td>
          </tr>
          <tr>
            <td class="vertical-baseline text-right"><label class="dis-inline required">Company Name</label></td>
            <td><input name="company_name" type="text" class="form__input form__input_full col-10 offset-1" placeholder="Pte Ltd"></td>
          </tr>
          <tr>
            <td class="vertical-baseline text-right"><label class="dis-inline required">Phone / Contact number</label></td>
            <td><input name="phone" type="text" class="form__input form__input_full col-10 offset-1" placeholder="+65"></td>
          </tr>
          <tr>
            <td class="vertical-baseline text-right"><label class="dis-inline required">Email Address</label></td>
            <td><input name="email" type="text" class="form__input form__input_full col-10 offset-1" placeholder="yourname@xyz.com"></td>
          </tr>
          <tr>
            <td class="vertical-baseline text-right"><label class="dis-inline required">Preferred Mode of Contact</label></td>
            <td>
              <div class="offset-2 text-left">
                <input type="radio" id="mode1" name="contact_mode" value="email" checked>
                <label for="mode1">Email</label>
              </div>
              <div class="offset-2 text-left">
                <input type="radio" id="mode2" name="contact_mode" value="phone">
                <label for="mode2">Contact Number</label>
              </div>
            </td>
          </tr>
          <tr>
            <td class="vertical-baseline text-right p-t-10"><label class="dis-inline required">Nature of query</label></td>
            <td class="p-t-10">
              <div class="offset-2 text-left">
                <input type="radio" name="nature" id="nature1" value="contract_assembly_management">
                <label for="nature1">Contract Assembly Management</label>
              </div>
              <div class="offset-2 text-left">
                <input type="radio" name="nature" id="nature2" value="client_services"> <label for="nature2">Client Service Technology</label>
              </div>
              <div class="offset-2 text-left">
                <input type="radio" name="nature" id="nature3" value="contract_assembly_and_client"><label for="nature3"> Above both</label>
              </div>
              <div class="offset-2 text-left">
                <input type="radio" name="nature" id="nature4" value="technical_issues"><label for="nature4">Technical Issues</label>
              </div>
              <div class="offset-2 text-left">
                <input type="radio" name="nature" id="nature5" value="billing"><label for="nature5">Billing</label>
              </div>
              <div class="offset-2 text-left">
                <input type="radio" name="nature" id="nature6" value="others"><label for="nature6">Others</label>
              </div>


            </td>
          </tr><tr>
          <td class="vertical-baseline text-right"><label class="dis-inline required">Message</label></td>
          <td><textarea name="message" type="text" class="form__input form__input_full col-10 offset-1 p-10"  style="min-height: 150px" placeholder="Type your message here"></textarea></td>
          </tr>
            <tr class="text-center">
              <td colspan="2" align="center" style="padding-left: 20%">
                <%= token_tag nil %>
                <input type="image" src="/assets/Submit-Button.png" alt="Submit Form" style="width: 25%;"/>
              </td>
            </tr>
          </form>
        </table>
      </div>
    </div>
    <% if flash[:success] == true %>
      <div class="success-msg text-center" role="alert">
        <%= flash[:message]%>
      </div>
    <% end %>
  </div>
</section>
<!-- end faq -->

